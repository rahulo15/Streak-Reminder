generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  clerkUserId    String   @unique // This links Clerk to your DB
  email          String
  
  // The data you need for your cron job
  leetcodeHandle    String? 
  codeforcesHandle  String?
  
  // Telegram Info
  telegramChatId    String?
  
  // Tracking
  lastSolvedDate    DateTime? // To avoid sending duplicate alerts
  createdAt         DateTime @default(now())
  updatedAt        DateTime @updatedAt
  remindersEnabled  Boolean  @default(true)
}
